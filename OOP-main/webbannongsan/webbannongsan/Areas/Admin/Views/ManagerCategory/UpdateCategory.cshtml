@model webbannongsan.Models.Category
@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<form class="max-w-lg mx-auto p-6 bg-white shadow-md rounded-lg" method="post" action="/Admin/ManagerCategory/UpdateCategory">
    @Html.HiddenFor(m => m.CategoryID)

    <div class="mb-4">
        <label class="block text-gray-700 font-bold mb-2" for="CategoryName">Tên danh mục:</label>
        <input type="text" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="CategoryName" name="CategoryName" value="@Model.Name">
    </div>
    <div class="mb-6">
        <p class="text-red-500">@ViewBag.error</p>
        <button type="submit" class="bg-blue-500 text-white font-bold py-2 px-4 rounded hover:bg-blue-600 focus:outline-none focus:shadow-outline">Lưu</button>
    </div>
</form>

