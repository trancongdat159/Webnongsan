@model webbannongsan.Models.Product
@{
    ViewBag.Title = "UpdateImageProduct";
}



<form class="form-horizontal" method="post" action="/Admin/ProductAdmin/UpdateImageProduct" enctype="multipart/form-data">
    @Html.HiddenFor(m => m.ProductID)
    <div class="form-group">
        <label class="control-label col-sm-2" for="ProductImage">Thêm hình ảnh</label>
        <div class="col-sm-10">
            <input type="file" class="form-control" id="ProductImage" name="ProductImage" >
        </div>
    </div>
    

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <p>@ViewBag.error</p>
            <button type="submit" class="btn btn-default">Lưu</button>
        </div>
    </div>
</form>