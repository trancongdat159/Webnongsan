@model webbannongsan.Models.Account
@{
    ViewBag.Title = "UpdateImage";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<form class="max-w-lg mx-auto p-6 bg-white shadow-md rounded-lg" method="post" action="/Admin/ManagerAccount/UpdateImage" enctype="multipart/form-data">
    @Html.HiddenFor(m => m.AccountID)

    <div class="mb-4">
        <label class="block text-gray-700 font-bold mb-2" for="AccountImage">Thêm hình ảnh:</label>
        <input type="file" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="AccountImage" name="AccountImage">
    </div>

    <div class="mb-6">
        <p class="text-red-500">@ViewBag.error</p>
        <button type="submit" class="bg-blue-500 text-white font-bold py-2 px-4 rounded hover:bg-blue-600 focus:outline-none focus:shadow-outline">Lưu</button>
    </div>
</form>

