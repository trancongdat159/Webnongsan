
@{
    ViewBag.Title = "CreateCoupon";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<form class="space-y-4" method="post" action="/Admin/ManagerCoupon/CreateCoupon">
    <div class="flex items-center">
        <label class="w-1/4 text-right pr-4" for="c">Tên mã giảm:</label>
        <div class="w-3/4">
            <input type="text" class="input-field" id="Name" name="Name" placeholder="Nhập Tên mã giảm">
        </div>
    </div>
    <div class="flex items-center">
        <label class="w-1/4 text-right pr-4" for="Discount">Mã giảm giá:</label>
        <div class="w-3/4">
            <select class="input-field" id="Discount" name="Discount">
                <option value="0.1">10%</option>
                <option value="0.2">20%</option>
                <option value="0.3">30%</option>
                <option value="0.4">40%</option>
                <option value="0.5">50%</option>
                <option value="0.6">60%</option>
                <option value="0.7">70%</option>
                <option value="0.8">80%</option>
                <option value="0.9">90%</option>
            </select>
        </div>
    </div>

    <div class="flex items-center">
        <label class="w-1/4 text-right pr-4" for="Detail">Mô tả:</label>
        <div class="w-3/4">
            <input type="text" class="input-field" id="Detail" name="Detail" placeholder="Nhập Mô tả">
        </div>
    </div>

    <div class="flex items-center">
        <div class="w-1/4"></div> <!-- Đây là ô trống để căn giữa nút button -->
        <div class="w-3/4">
            <p class="text-red-500">@ViewBag.error</p>
            <button type="submit" class="btn btn-primary mt-4">Tạo mã giảm giá</button>
        </div>
    </div>

</form>

<style>
    .input-field {
        width: 100%;
        padding: 0.5rem;
        border: 1px solid #D1D5DB; /* gray-300 */
        border-radius: 0.375rem; /* rounded-md */
    }

    .btn {
        padding-left: 1rem; /* px-4 */
        padding-right: 1rem; /* px-4 */
        padding-top: 0.5rem; /* py-2 */
        padding-bottom: 0.5rem; /* py-2 */
        background-color: #3B82F6; /* blue-500 */
        color: white;
        border-radius: 0.375rem; /* rounded-md */
    }

        .btn:hover {
            background-color: #2563EB; /* blue-600 */
        }
</style>

