@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng ký tài khoản</title>
    <!-- Thêm Bootstrap CSS từ CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Thêm Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        .register-container {
            background-color: #f8f9fa;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 40px;
        }

        .password-field {
            position: relative;
        }

            .password-field .toggle-password {
                position: absolute;
                right: 15px;
                top: 50%;
                transform: translateY(-50%);
                cursor: pointer;
            }

        .btn-custom {
            background-color: #007bff;
            color: #fff;
            border-radius: 50px;
            padding: 10px 20px;
            transition: background-color 0.3s ease;
        }

            .btn-custom:hover {
                background-color: #0056b3;
            }

        .alert-danger {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <nav class="navbar shadow-sm p-3 mb-5 bg-white">
        <div class="container-fluid">
            <!-- Bạn có thể thêm logo hoặc các liên kết vào đây -->
        </div>
    </nav>

    <section class="my-lg-14 my-8">
        <div class="container">
            <div class="row justify-content-center align-items-center">
                <div class="col-12 col-md-6 col-lg-4 order-lg-1 order-2">
                    <img src="https://media.loveitopcdn.com/3807/thumb/logo-nong-san-nha-que-compressed.jpg" alt="Register Image" class="img-fluid">
                </div>
                <div class="col-12 col-md-6 offset-lg-1 col-lg-5 order-lg-2 order-1 register-container">
                    <div class="mb-lg-9 mb-5 text-center">
                        <h1 class="mb-1 h2 fw-bold">Đăng ký tài khoản</h1>
                        <p>Tham gia cùng <span class="text-primary">Vườn Nông Sản Tươi Ngon!</span></p>
                    </div>

                    <form action="/Account/Register" method="post">
                        <input type="hidden" name="__RequestVerificationToken" value="TOKEN_HERE">

                        <div class="mb-3">
                            <label for="ho" class="form-label">Họ:</label>
                            <input type="text" id="ho" name="FirstName" class="form-control" placeholder="Nhập họ của bạn" required>
                        </div>

                        <div class="mb-3">
                            <label for="ten" class="form-label">Tên:</label>
                            <input type="text" id="ten" name="LastName" class="form-control" placeholder="Nhập tên của bạn" required>
                        </div>

                        <div class="mb-3">
                            <label for="email" class="form-label">Email:</label>
                            <input type="email" id="email" name="Email" class="form-control" placeholder="Nhập địa chỉ email" required>
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Mật khẩu:</label>
                            <div class="password-field">
                                <input type="password" id="password" name="Password" class="form-control" placeholder="Nhập mật khẩu" required>
                                <span class="toggle-password bi bi-eye-slash" onclick="togglePassword('password')"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="phone" class="form-label">Số điện thoại:</label>
                            <input type="text" id="phone" name="PhoneNumber" class="form-control" placeholder="Nhập số điện thoại" required>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-custom">Đăng ký</button>
                        </div>
                    </form>

                    <div class="alert alert-danger" style="display: none;">
                        <!-- Thông báo lỗi sẽ hiển thị ở đây -->
                    </div>

                    <p class="mt-4 text-center">
                        <small>Bạn đã có tài khoản? <a href="Login" class="link-primary">Đăng nhập</a></small>
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- Thêm Bootstrap JS và các phụ thuộc từ CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function togglePassword(fieldId) {
            const passwordInput = document.getElementById(fieldId);
            const toggleIcon = passwordInput.nextElementSibling;
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.classList.remove('bi-eye-slash');
                toggleIcon.classList.add('bi-eye');
            } else {
                passwordInput.type = 'password';
                toggleIcon.classList.remove('bi-eye');
                toggleIcon.classList.add('bi-eye-slash');
            }
        }

        // Nếu bạn muốn hiển thị thông báo lỗi từ phía server, bạn có thể sử dụng JavaScript để hiển thị alert-danger
        // Ví dụ:
        /*
        const errorMessage = '@ViewBag.ErrorMessage';
        if (errorMessage) {
            const alertDiv = document.querySelector('.alert-danger');
            alertDiv.textContent = errorMessage;
            alertDiv.style.display = 'block';
        }
        */
    </script>
</body>
</html>
