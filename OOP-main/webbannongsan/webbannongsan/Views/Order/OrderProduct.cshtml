
@{
    ViewBag.Title = "Order";
}

<h2>Order</h2>

<form method="post" action="/Order/OrderProduct">

    @for (int i = 0; i < Model.Count; i++)
    {
        <img style="width:50px" src="~/image/product/@Model[i].Image" />
        <p>@Model[i].ProductName</p>
        <input type="number" id="quantity" value="@ViewBag.CartQuantity[i]" />
        <p>@Model[i].Price.ToString("#,0") VND</p>
    }
    <div> Tổng tiền @ViewBag.sumPrice.ToString("#,0") VND</div>
    <button>Đặt hàng</button>

</form>
