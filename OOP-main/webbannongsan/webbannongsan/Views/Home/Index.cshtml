@model List<webbannongsan.Models.Product>
@{
    ViewBag.Title = "Trang chủ";

}
<div>
    <div class="homeindex">
        <div class="display">
            <div class="text">
                <p class="sale" >Mã giảm giá 50%</p>
                <h2>Siêu Thị Tạp Hóa Tươi Sống</h2>
                <p>Mô hình tạp hóa tươi sống và hệ thống giao hàng tiên lợi</p>
                <a href="/Product/Product">Mua ngay</a>
            </div>
            <div class="image">
                <img src="~/image/imagedisplay.jpg">              
                <img class="orange" src="~/image/orange.png">
            </div>
        </div>
        <div>
            <h2>Sản phẩm giảm giá</h2>
            <div class="product-list">
                @foreach (var item in Model)
                {
                    <div class="product-item">

                        <div class="product-image">
                            <img src="~/image/product/@item.Image" alt="@item.ProductName" />
                            
                        </div>

                        <div class="product-details">
                            <h2 class="product-name">@item.ProductName</h2>
                            <p class="product-price">@item.Price.ToString("N0") VND</p>
                            <div class="product-actions">

                                <form method="get" action="~/Product/DetailProduct">
                                    <button type="submit" name="detailPrID" value="@item.ProductID">Chi tiết</button>
                                </form>
                                <form method="get" action="#">
                                    <button type="submit" name="buyNow" value="@item.ProductID">Mua ngay</button>
                                </form>
                            </div>


                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<link href="~/Content/index.min.css" rel="stylesheet" />
<style>
    .product-list {
        display: flex;
        justify-content: space-between;
        padding: 20px;
        background-color: #f9f9f9;
        flex-wrap: wrap;
    }

    .product-item {
        margin: 10px;
        padding: 20px;
        background-color: #FFFFFF;
        color: black;
        text-align: center;
        width: 250px;
        height: auto;
        box-sizing: border-box;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .product-image {
        width: 100%;
        height: 150px;
        overflow: hidden;
    }

        .product-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .product-details {
        margin-top: 10px;
    }

    .product-name, .product-price {
        margin: 5px 0;
    }

    .product-actions {
        margin-top: 10px;
    }

        .product-actions button {
            background-color: white;
            color: #4CAF50;
            border: none;
            padding: 10px 15px;
            cursor: pointer;
        }

    .product-item:hover {
        background-color: #ffffff;
        border: 2px solid #888888;
    }

    .product-actions button {
        background-color: #4CAF50;
        color: white;
        border: none;
        padding: 10px 15px;
        cursor: pointer;
        border-radius: 10px;
        margin: 5px;
        transition: background-color 0.3s;
    }

        .product-actions button:hover {
            background-color: #fff176;
        }

    .product-actions {
        display: flex;
        justify-content: space-between;
        margin-top: 10px;
    }
</style>